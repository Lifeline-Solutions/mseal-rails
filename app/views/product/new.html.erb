<%= form_with model: @product, url: product_index_path, method: :post, data: { turbo: false }, local: true do |f|  %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :size %>
  <%= f.text_field :size %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :photo %>
  <%= f.file_field :photo_product %>

  <%= f.submit %>



<% end %>
