<div class="p-6 bg-[#FAE115] font-bold uppercase text-5xl flex justify-between">
  PRODUCT <% if current_user %>
    <%=link_to "Add Product", new_product_path, class: "normal-case border-2 border-[#fff] hover:bg-[#fff] font-normal lg:text-2xl md:text-xl sm:text-sm sm:text-xl text-white hover:text-[#FAE115] p-2 rounded-full mb-2" %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= image_tag(product.photo_product) %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>

        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  <% if current_user %>
    <%= link_to 'New Product', new_product_path %>
  <% end %>

</table>