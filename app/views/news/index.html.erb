
<div class="flex-col">


<% @news.each do |news| %>
<div class="max-w-sm w-full lg:max-w-full lg:flex mb-6 ">
  <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden">
    <%= image_tag(news.image, class: "h-48 w-48") %>
  </div>
  <div class="h-48 w-[80%] lg:h-auto border-r border-b border-l border-[#FAE115] lg:border-l-0 lg:border-t lg:border-[#FAE115] bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="">
      <p class="text-sm text-gray-600 flex items-center">
        <%= news.type_of_news %>
      </p>

      <div class="text-gray-900 font-bold text-xl mb-2"><%= news.header_news %></div>
      <p class="text-gray-700 text-base"><%= news.body %></p>
    </div>
  </div>
</div>
<% end %>

</div>