<div class="bg-[#FAE115]">
  <h1 class="text-4xl font-bold uppercase p-4">News</h1>
</div>

<div class="bg-gray-300 flex text-3xl py-3 px-5 md:mx-10 md:gap-20">
  <p>Latest News</p>
  <p>Featured</p>
</div>

<div class="flex-col mt-10 md:ml-10">
  <%# getting the date %>
  
  <h1 class="font-bold text-2xl">APRIL, 2023</h1>
  <div class="flex flex-col md:flex-row md:flex md:justify-between" >
  <div class="md:w-[80%]">
    <% @news.each do |news| %>
    <div class="mx-2 w-full lg:max-w-full mt-5 flex mb-6">
      <div class="h-36 lg:rounded-t-none lg:rounded-l md:text-center overflow-hidden">
        <%= image_tag(news.image, class: "h-48 w-48") %>
      </div>
      <div class="h-36 md:w-[80%] shadow-2xl lg:h-auto border-r border-b border-l  lg:border-l-0 lg:border-t bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-start leading-normal">
        <div class="">
          <p class="text-sm text-gray-600 flex items-center">
            <%= news.type_of_news %>
          </p>
  
          <div class="text-gray-900 font-bold text-xl mb-2 truncate md:mt-3"><%= news.header_news %></div>
  
          <div class="flex flex-col md:flex-row gap-2">
            <div class="bg-[#FAE115] md:mt-3 md:p-3 rounded-lg">
              <%= link_to "Read More", news_path(news.id), class: "text-[#000] md:font-bold md:py-2 md:px-4 p-2 rounded mt-2" %>
            </div>
            <% if current_user %>
              <div class="md:ml-10 md:mt-3 bg-[#FAE115] md:p-3 rounded-lg">
                <%= link_to "Edit News", edit_news_path(news.id), class: "text-[#000] md:font-bold md:py-2 md:px-4 p-2 rounded mt-2" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>

  </div >
   <div class="bg-white flex-col md:flex-row border-t-indigo-500">
    <div class="flex flex-col md:items-end gap-5 hidden sm:flex ">
      <div class="flex flex-col md:w-[303px] text-white bg-black">
        <%= image_tag 'featured1.png', class: "md:w-[300px]"%>
        <p class=" text-xs p-2">Featured</p>
        <p class="text-xl p-4 font-bold w-[90%]">Hello</p>
      </div>
    </div>


    <div class="flex flex-col md:items-end gap-5 sm:flex mt-10 ">
      <div class="flex flex-col md:w-[303px] text-white bg-black">
        <%= image_tag 'featured1.png', class: "md:w-[300px]"%>
        <p class=" text-xs p-2">Featured</p>
        <p class="text-xl p-4 font-bold w-[90%]">Hello</p>
      </div>
    </div>
  </div>
</div>
<% end %>

