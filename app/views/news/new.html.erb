<%= form_with  model: @news, url: news_index_path, method: :post, data: { turbo: false }, local: true do |f| %>

    <%= f.text_field :type_of_news, placeholder: 'Type of News', required: true %>

    <%= f.text_field :header_news, placeholder: 'Header for news' %>

    <%= f.text_area :body,  placeholder: 'Body Content to 400 words', row: "6" %>

    <%= f.file_field :image %>



    <%= f.submit "Submit", class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"%>
<% end %>
