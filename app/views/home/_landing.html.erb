<div class="flex flex-col md:flex-row gap-5   m-[4%]">
  <div class="container">

      <% @news.limit(1).each do |news| %>
          <div class=" flex flex-col items-start bg-white border border-[#FAE115] rounded-lg shadow md:flex-row ">

            <%= image_tag(news.image, class: "object-cover w-full rounded-t-lg lg:w-[70%] md:h-[400px] md:w-[600px] sm:w-[200px] md:rounded-none md:rounded-l-lg hover:bg-[#FAE115]" ) %>
              <div class="flex flex-col justify-start leading-normal p-5">
              <h1 class="text-gray-500">News</h1>
              <h5 class="mb-6 text-4xl font-bold tracking-tight text-[#000] mt-5"><%= news.type_of_news %></h5>
                <p class="mb-2 font-normal text-[#000]"><%= news.header_news %></p>
                <%= link_to news_path(news.id) do %>
                  <p class="bg-[#FAE115] sm:p-2 flex group-hover:bg-black group-hover:text-white justify-center  rounded-lg font-semibold">
                    Read More
                  </p>
                <% end %>
              </div>

          </div>
      <% end %>

    <% @news.limit(3).each do |news| %>
      <div class="inline-flex mr-2 md:max-w-[32%] md:min-w-[270px] sm:w-[100%]">

        <div class="bg-white border border-[#FAE115] mt-[28px]">
          <%= image_tag(news.image)  %>
          <div class="p-5">
              <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 truncate">
                <%= news.type_of_news %>
              </h5>
              <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 truncate">
                <%= news.header_news %>.
              </p>
            <%= link_to news_path(news.id) do %>
              <div class="inline-flex items-center px-3 py-2 text-sm font-semibold text-center text-black hover:text-[#FAE115] bg-[#FAE115] rounded-lg hover:bg-white hover:border-[#FAE115] border focus:ring-4 focus:outline-none focus:ring-blue-300">
                Read More
                <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    <% end %>
  </div>


  <div class="bg-white flex-col md:flex-row border-t-indigo-500 ">
    <div class="flex flex-col md:items-end gap-5 hidden sm:flex mb-8">
      <div class="flex flex-col md:w-[303px] text-white bg-black">
        <%= image_tag 'featured1.png', class: "md:w-[300px]"%>
        <p class=" text-xs p-2">Featured</p>
        <p class="text-xl p-4 font-bold w-[90%]">{item.title}</p>
      </div>
    </div>


    <div class="flex flex-col md:items-end gap-5 hidden sm:flex ">
      <div class="flex flex-col md:w-[303px] text-white bg-black">
        <%= image_tag 'featured1.png', class: "md:w-[300px]"%>
        <p class=" text-xs p-2">Featured</p>
        <p class="text-xl p-4 font-bold w-[90%]">{item.title}</p>
      </div>
    </div>

  </div>

</div>